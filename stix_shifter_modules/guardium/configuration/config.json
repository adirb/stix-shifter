{
    "connection": {
        "type": {
            "default": "guardium"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "default": 8443,
            "type": "number"
        },
        "help": {
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.3.0/cp4s_v1r3/docs/scp-core/data-sources-guardium.html",
            "type": "link"
        },
        "cert": {
            "type": "password",
            "optional": true
        },
        "sni": {
            "type": "text",
            "optional": true
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
            "client_id": {
                "type": "string",
                "optional": true,
                "hidden": true
            },
            "client_secret": {
                "type": "password",
                "optional": true,
                "hidden": true
            }
    },
    "configuration": {
        "auth": {
          "type" : "fields",
          "username": {
              "type": "password"
          },
          "password": {
              "type": "password"
          }
        },
        "logLevel": {
          "type": "text",
          "default": "debug"
        }
    }
}
